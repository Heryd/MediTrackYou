<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcercadeActivity">

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="156dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/lbl_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="EVIDENCIA GRUPO 4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_integrante1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- COLOMA GUZMAN JOHN STEVEN" />

        <TextView
            android:id="@+id/lbl_integrante2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- MORLA GORDILLO HERYD XAVIER" />

        <TextView
            android:id="@+id/lbl_integrante3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- TOMALA MAGALLANES KEVIN SAUL" />

        <TextView
            android:id="@+id/txt_subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="DESARROLLO DE APLICACIONES MOVILES - SOF-S-MA-2"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:backgroundTint="#4F428A"
        android:onClick="regresar"
        android:text="Regresar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="372dp"
        android:layout_height="303dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589"
        app:srcCompat="@mipmap/fotogrupo4" />
</androidx.constraintlayout.widget.ConstraintLayout>